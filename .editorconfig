indent_size = 4
charset = utf8

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{/lib/**,/bin/**}]
charset = none
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none
